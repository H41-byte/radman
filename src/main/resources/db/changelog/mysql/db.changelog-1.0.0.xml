<?xml version="1.1" encoding="UTF-8" standalone="no"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet id="1" author="NetCore j.s.a">
        <createTable tableName="system_user">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" 
                    type="VARCHAR(64)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_system_user_username"/>
            </column>
            <column name="password" 
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_length"
                    type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="role" 
                    type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="last_login_time" 
                    type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="NetCore j.s.a">
        <createTable tableName="radius_user">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username"
                    type="VARCHAR(64)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_radius_user_username"/>
            </column>
            <column name="description"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="NetCore j.s.a">
        <createTable tableName="radius_group">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" 
                    type="VARCHAR(64)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_radius_group_name"/>
            </column>
            <column name="description"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="NetCore j.s.a">
        <createTable tableName="radcheck_attribute">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" 
                    type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="description"
                    type="VARCHAR(255)"/>
            <column name="sensitive_data"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="5" author="NetCore j.s.a">
        <createTable tableName="radreply_attribute">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name"
                    type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="description"
                    type="VARCHAR(255)"/>
            <column name="sensitive_data"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="NetCore j.s.a">
        <addUniqueConstraint tableName="radcheck_attribute"
                             columnNames="name"
                             constraintName="uk_radcheck_attribute_name"/>
    </changeSet>

    <changeSet id="7" author="NetCore j.s.a">
        <addUniqueConstraint tableName="radreply_attribute"
                             columnNames="name"
                             constraintName="uk_radreply_attribute_name"/>
    </changeSet>

</databaseChangeLog>
